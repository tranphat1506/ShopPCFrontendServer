        </header>
        <div id="main" class="h-auto w-full overflow-x-hidden">
            <div class="h-auto mx-auto max-w-screen-2xl bg-white flex">
                <!-- Section Left (Sidebar) -->
                <div
                    id="sidebar-container"
                    class="sidebar--open hidden border-r lg:min-w-[250px] w-max min-h-full bg-white transition-transform duration-300"
                >
                    <div class="admin-sidebar"></div>
                </div>
                <!-- Main -->
                <div class="py-2 px-4 w-full h-full">
                    <!-- Dashboard (Chart) -->
                    <div class="">
                        <div class="flex items-center justify-between">
                            <h1 class="font-normal text-xl py-4">Admin Dashboard</h1>
                            <button class="p-1 rounded-full bg-[#333] hover:bg-[#555] active:bg-[#444]">
                                <i class="text-white bi bi-gear-fill h-6 w-6 block"></i>
                            </button>
                        </div>
                        <!-- Card  -->
                        <div class="grid lg:grid-cols-4 grid-cols-2 gap-4 mb-4">
                            <div
                                class="h-[150px] bg-red-500 text-white p-2 px-4 flex flex-col items-end justify-center basis-1/4 relative"
                            >
                                <h1 class="text-3xl text-end">12</h1>
                                <p class="text-sm leading-none text-end">Người vào trang trong ngày</p>
                                <span class="absolute bottom-0 left-0">
                                    <i class="bi bi-people-fill text-6xl text-white opacity-25 leading-none"></i>
                                </span>
                            </div>
                            <div
                                class="h-[150px] bg-amber-400 text-white p-2 px-4 flex flex-col items-end justify-center basis-1/4 relative"
                            >
                                <h1 class="text-3xl text-end">12,00 Triệu đồng</h1>
                                <p class="text-sm leading-none">Tổng doanh thu trong ngày</p>
                                <span class="absolute bottom-0 left-0">
                                    <i class="bi bi-cash-coin text-6xl text-white opacity-25 leading-none"></i>
                                </span>
                            </div>
                            <div
                                class="h-[150px] bg-blue-500 text-white p-2 px-4 flex flex-col items-end justify-center basis-1/4 relative"
                            >
                                <h1 class="text-3xl leading-none text-end">10</h1>
                                <p class="text-sm leading-none text-end">Đơn hàng mới trong ngày</p>
                                <span class="absolute bottom-0 left-0">
                                    <i class="bi bi-cart-check-fill text-6xl text-white opacity-25 leading-none"></i>
                                </span>
                            </div>
                            <div
                                class="h-[150px] bg-violet-500 text-white p-2 px-4 flex flex-col items-end justify-center basis-1/4 relative"
                            >
                                <h1 class="text-3xl text-end">1</h1>
                                <p class="text-sm leading-none text-end">Đơn hàng chờ xác nhận</p>
                                <span class="absolute bottom-0 left-0">
                                    <i class="bi bi-cart-dash-fill text-6xl text-white opacity-25 leading-none"></i>
                                </span>
                            </div>
                        </div>
                        <!-- Charts -->
                        <div class="mb-4 flex w-full basis-full gap-4 lg:flex-row flex-col">
                            <div class="lg:basis-1/2 border rounded p-2 px-4">
                                <!-- Title -->
                                <div class="text-[#333] flex justify-between items-center border-b py-2">
                                    <h1 class="font-medium uppercase text-xl tracking-tighter text-red-500">
                                        <i class="bi bi-people-fill"></i>
                                        Lượt vào trang
                                    </h1>
                                    <select class="bg-white border rounded py-1 px-2">
                                        <option value="day">Trong Ngày</option>
                                        <option value="week">Trong Tuần</option>
                                        <option value="month">Trong Tháng</option>
                                        <option value="month" selected>Trong Năm</option>
                                    </select>
                                </div>
                                <!-- Chart container -->
                                <canvas id="visitors__chart"></canvas>
                            </div>
                            <div class="lg:basis-1/2 border rounded p-2 px-4">
                                <!-- Title -->
                                <div class="text-[#333] flex justify-between items-center border-b py-2">
                                    <h1 class="font-medium uppercase text-xl tracking-tighter text-amber-400">
                                        <i class="bi bi-cash-coin"></i>
                                        Doanh thu
                                    </h1>
                                    <select class="bg-white border rounded py-1 px-2">
                                        <option value="day">Trong Ngày</option>
                                        <option value="week">Trong Tuần</option>
                                        <option value="month">Trong Tháng</option>
                                        <option value="month" selected>Trong Năm</option>
                                    </select>
                                </div>
                                <!-- Chart container -->
                                <canvas id="revenues__chart"></canvas>
                            </div>
                        </div>

                        <!-- Big chart -->
                        <div class="basis-full border rounded p-2 px-4">
                            <!-- Title -->
                            <div class="text-[#333] flex justify-between items-center border-b py-2">
                                <h1 class="font-medium uppercase text-xl tracking-tighter text-blue-500">
                                    <i class="bi bi-basket-fill"></i>
                                    Các doanh mục bán hàng
                                </h1>
                                <select class="bg-white border rounded py-1 px-2">
                                    <option value="week">Theo lượt xem</option>
                                    <option value="month">Theo lượt mua</option>
                                    <option value="month" selected>Theo Doanh thu</option>
                                </select>
                            </div>
                            <!-- Chart container -->
                            <canvas id="bestSellCategory__chart" class="max-h-[400px]"></canvas>
