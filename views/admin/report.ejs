                <!-- nav -->
                <div class="flex gap-2 items-center justify-center">
                    <!-- User Avt -->
                    <button
                        id="avatar"
                        class="relative h-[45px] w-[45px] bg-white rounded-full flex items-center justify-center"
                    >
                        <img src="/assets/img/admin_avt.png" alt="User Avatar" class="rounded-full w-10 h-10" />
                        <span
                            class="absolute bottom-0 right-0 bg-white rounded-full w-3 h-3 inline-flex justify-center items-center"
